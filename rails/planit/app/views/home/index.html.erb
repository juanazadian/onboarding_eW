<%= render 'home/header' %>
<% if user_signed_in? %>
  <h2>Welcome <%= current_user.name if current_user %> </h2>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %>
  <%= link_to 'Register', new_user_registration_path %>
<%end%>

<main class="container">
  <section class="row">
    <p class="fs-4 mt-5">S E R V I C I O S</p>
  </section>
  <section class="row row-cols-6 justify-content-center">
      <div class="col-1 d-flex flex-column align-items-center">
        <img src="<%= image_path('tutoral.svg') %>" class="img-fluid border border-primary service-box">
        <p class="fs-4 m-2">Tutorial</p>
      </div>
      <% @categories.each do |c| %>
        <div class="col-3 col-md-2 col-lg-1 d-flex flex-column align-items-center">
          <a href="/<%= c.id %>" class="text-decoration-none text-center">
            <img src="<%= image_path("#{c.img}")%>" class="img-fluid service-box">
            <p class="fs-4 m-2"><%= c.name %></p>
          </a>
        </div>
      <% end %>
  </section>
  <section class="row justify-content-center mt-4">
    <% @providers.each do |p| %>
      <div class="col-3 card m-3 rounded d-flex flex-column shadow m-4 p-0">
        <a href="<%= provider_path(p) %>" class="text-decoration-none">
          <div class="card-body d-flex flex-column">
            <img src="<%= image_path("#{p.img}") %>">
            <p class="text-body fs-3 m-0 mt-3"><b><%= p.name %></b></p>
            <p class="text-body fs-6 m-0"><small><%= p.desc %></small></p>
            <% if p.delivery %>
              <div class="row d-flex pt-1 no-gutters p-0">
                <div class="col-1 p-0">
                  <img src="<%= image_path('camion.svg') %>">
                </div>
                <div class="col-10 p-0">
                  <p class="text-body fs-6 m-2">Entrega a domicilio</p>
                </div>
              </div>
            <% end %>
          </div>
        </a>
      </div>
    <% end %>
  </section>

</main>
